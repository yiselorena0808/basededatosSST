<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Piel">

    <!-- Barra superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/black">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_format_list_bulleted_24"
            android:layout_marginLeft="10dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lector de Gestion"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#333333" />

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/scroll_brackground"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informacion Personal"
                android:textColor="#333333"
                android:gravity="center"
                android:textSize="16sp" />


            <!-- Campo Nombre -->
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textColor="#333333"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_nombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:hint="Ingrese nombre"
                android:padding="10dp"/>

            <!-- Apellido -->
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textColor="#333333"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_cargo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:hint="Ingrese apellido"
                android:padding="10dp"/>

            <!-- Cédula -->
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cédula:"
                android:textColor="#333333"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_cedula"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:hint="Ingrese cédula"
                android:padding="10dp"/>

            <!-- Cargo -->
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargo"
                android:textColor="#333333"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_cargo1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#FFFFFF"
                android:hint="Ingrese Cargo"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Producto a Solicitar"
                android:textColor="#333333"
                android:gravity="center"
                android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Producto"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_lugar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="ingrese nombre del producto"
                android:padding="10dp"
                android:textColor="#333333"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cantidad"
                android:textColor="#333333"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_fecha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="Ingrese la cantidad de producto"
                android:padding="10dp"
                android:textColor="#333333"
                android:textSize="16sp" />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Importancia de solicitud"
                android:textColor="#333333"
                android:textSize="16sp"/>
            <EditText
                android:id="@+id/et_"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:hint="Muestra la importancia"
                android:padding="10dp"
                android:textColor="#333333"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Botón -->
    <Button
        android:id="@+id/btRregresarGestion"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/Verde"
        android:text="Regresar" />
</LinearLayout>
