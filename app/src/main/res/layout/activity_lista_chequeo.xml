<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#fdf3f1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Barra superior -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#000000"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:elevation="4dp">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="44dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="#FFFFFF"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/logo"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Contenedor blanco principal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fdf3f1"
            android:padding="24dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista De Chequeo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre Usuario:"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#CCCCCC"/>

            <!-- Fecha y hora -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fecha:"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:backgroundTint="#CCCCCC"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hora:"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="time"
                    android:backgroundTint="#CCCCCC"/>
            </LinearLayout>

            <!-- Modelo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modelo:"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#CCCCCC"/>

            <!-- Marca -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marca:"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#CCCCCC"/>

            <!-- Soat y Tecnicomecánica -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <!-- Soat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soat:"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:layout_marginStart="8dp" />
                    </RadioGroup>
                </LinearLayout>

                <!-- Tecnicomecánica -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tecnicomecánica:"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:layout_marginStart="8dp" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <!-- Kilometraje -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kilometraje:"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#A5F2D4"/>

            <!-- Características -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CARACTERISTICAS"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*"
                android:layout_marginBottom="24dp">

                <TableRow android:background="#DDDDDD">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="CARACTERISTICAS"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:padding="8dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="VERIFICADO"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:padding="8dp"
                        android:layout_weight="1"/>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Enviar Estado"
                        android:textColor="#333333"
                        android:padding="8dp"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>

            <!-- Botón Guardar -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar Lista"
                android:backgroundTint="#A5F2D4"
                android:textColor="#000000"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
